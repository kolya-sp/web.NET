@*@model IEnumerable<lab4.Models.Play>*@
@model lab4.Models.PlayListViewModel

@{
    ViewBag.Title = "Plays";
}

<h2>Plays</h2>

<p>
    @Html.ActionLink("Create New", "Create","Plays",null,null)
</p>

<table class="table">
    <form method="get">
    <tr>
        <div class="form-inline">
        <th>
            @Html.DropDownList("Name", Model.Name as SelectList,
        htmlAttributes: new { @class = "form-control" })
        </th>
        <th>
            @Html.DropDownList("Autor", Model.Autor as SelectList,
                        htmlAttributes: new { @class = "form-control" })
        </th>
        <th>
            @Html.DropDownList("Genre", Model.Genre as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        </th>
        <th>
            @Html.DropDownList("Data", Model.Data as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        </th>
        <th>
            <input type="submit" value="Фильтр" class="btn btn-default" />
        </th>
            </div>
    </tr>
        </form>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Plays)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", "Plays", new { id = item.Id },null) |
                @Html.ActionLink("Details", "Details", "Plays", new { id = item.Id }, null) |
                @Html.ActionLink("Видалити", "Delete", "Plays", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>